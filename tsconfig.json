{
    "$schema": "https://json.schemastore.org/tsconfig",

    "compilerOptions": {
        "lib": ["es2019"],
        "module": "ESNext",
        "target": "ES2019",
        "types": ["ts-node", "jest"],

        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,

        "outDir": "lib",
        "declaration": true
    },

    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "**/__tests__/*",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}
