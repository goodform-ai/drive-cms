{
    "parser": "@typescript-eslint/parser",
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended",
        "prettier"
    ],
    "plugins": ["prettier", "@typescript-eslint"],
    "ignorePatterns": ["lib/**/*"],
    "rules": {
        "prettier/prettier": "error",
        "no-console": "warn"
    },
    "parserOptions": {
        "sourceType": "module"
    }
}
